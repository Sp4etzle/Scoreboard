<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:id="@+id/SpaceButtom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to Board"
        android:id="@+id/connectToBoard"
        android:layout_alignTop="@+id/searchDevices"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="15dp"
        android:layout_margin="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Devices"
        android:id="@+id/searchDevices"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deviceSpinner"
        android:layout_below="@+id/searchDevices"
        android:layout_centerHorizontal="true"
        android:textAlignment="gravity"
        android:gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerMin"
        android:layout_below="@+id/deviceSpinner"
        android:layout_toLeftOf="@+id/numberPickerSec" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerSec"
        android:layout_below="@+id/deviceSpinner"
        android:layout_toLeftOf="@+id/SpaceButtom" />

    <TextView
        android:text="Default Time\n Min        Sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/deviceSpinner"
        android:id="@+id/textView11"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:background="?android:attr/colorBackground"
        android:layout_alignLeft="@+id/numberPickerMin"
        android:layout_alignStart="@+id/numberPickerMin"
        android:layout_alignRight="@+id/numberPickerSec"
        android:layout_alignEnd="@+id/numberPickerSec" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerMinCT"
        android:layout_below="@+id/deviceSpinner"
        android:layout_toRightOf="@+id/SpaceButtom" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerSecCT"
        android:layout_below="@+id/deviceSpinner"
        android:layout_toRightOf="@+id/numberPickerMinCT" />

    <TextView
        android:text="Correct Time\n Min        Sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/deviceSpinner"
        android:id="@+id/textView12"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:background="?android:attr/colorBackground"
        android:layout_alignLeft="@+id/numberPickerMinCT"
        android:layout_alignStart="@+id/numberPickerMinCT"
        android:layout_alignRight="@+id/numberPickerSecCT"
        android:layout_alignEnd="@+id/numberPickerSecCT" />

</RelativeLayout>